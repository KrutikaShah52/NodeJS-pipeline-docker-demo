node{
    def app
    def tag = "latest"

    stage('Checkout'){
        checkout scm
    }
    stage('test') {
        def myTestContainer = docker.build("nodejs-docker-app")
        def mysql = docker.image('mysql').run("-e MYSQL_ALLOW_EMPTY_PASSWORD=yes")
        myTestContainer.inside("-u root:root","--link ${mysql.id}:mysql") {
            sh 'npm install'
            sh 'npm test'
        }
        mysql.stop()
    }
}
